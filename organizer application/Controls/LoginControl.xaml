<UserControl x:Class="organizer_application.Controls.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#2E2E2E">
        <StackPanel Margin="20">
            <TextBlock Text="Login" FontSize="24" Foreground="White" Margin="0,0,0,20" />
            <TextBox x:Name="UsernameTextBox" Text="Username" Margin="0,0,0,10" />
            <PasswordBox x:Name="PasswordBox" Password="Password" Margin="0,0,0,20" />
            <Button Content="Login" Click="LoginButton_Click" Background="#3A3A3A" Foreground="White" />
            <TextBlock Text="Don't have an account? Click Register" Foreground="LightGray" Margin="0,20,0,0" 
                       TextAlignment="Center" MouseDown="RegisterTextBlock_MouseDown" />
        </StackPanel>
    </Grid>
</UserControl>
