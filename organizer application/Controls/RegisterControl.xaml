<UserControl x:Class="organizer_application.Controls.RegisterControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#2E2E2E">
        <StackPanel Margin="20">
            <TextBlock Text="Register" FontSize="24" Foreground="White" Margin="0,0,0,20" />
            <TextBox x:Name="NewUsernameTextBox" Text="Username" Margin="0,0,0,10" />
            <PasswordBox x:Name="NewPasswordBox" Password="Password" Margin="0,0,0,20" />
            <Button Content="Register" Click="RegisterButton_Click" Background="#3A3A3A" Foreground="White" />
            <TextBlock Text="Already have an account? Click Login" Foreground="LightGray" Margin="0,20,0,0" 
                       TextAlignment="Center" MouseDown="LoginTextBlock_MouseDown" />
        </StackPanel>
    </Grid>
</UserControl>
