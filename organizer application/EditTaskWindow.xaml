<Window x:Class="organizer_application.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer_application"
        mc:Ignorable="d"
        Title="Редактировать задачу" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="TitleTextBox" Text="Название задачи" />
            <TextBox x:Name="DescriptionTextBox" Text="Описание задачи" />
            <DatePicker x:Name="DueDatePicker" />
            <ComboBox x:Name="PriorityComboBox">
                <ComboBoxItem Content="Высокий" />
                <ComboBoxItem Content="Средний" />
                <ComboBoxItem Content="Низкий" />
            </ComboBox>
            <ComboBox x:Name="StatusComboBox">
                <ComboBoxItem Content="Выполнено" />
                <ComboBoxItem Content="Невыполнено" />
                <ComboBoxItem Content="В работе" />
                <ComboBoxItem Content="Закрыта" />
            </ComboBox>
            <Button Content="Сохранить" Click="SaveAndChangeStatusButton_Click" />
        </StackPanel>
    </Grid>
</Window>
