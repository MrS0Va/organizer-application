<Window x:Class="organizer_application.TodoApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer_application"
        xmlns:conv="clr-namespace:organizer_application.Models"
            Title="TodoApp" Height="450" Width="800"
        x:Name="TodoWindow"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="TasksListBox" Grid.Row="0" Margin="0,0,0,10" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Добавить задачу" Width="100" Click="AddTaskButton_Click"/>
            <Button Content="Редактировать задачу" Width="130" Click="EditTaskButton_Click"/>
            <Button Content="Удалить задачу" Width="100" Click="DeleteTaskButton_Click"/>

            <Button Content="Сменить тему" Width="104" Command="{Binding ToggleThemeCommand}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ElementName=TodoWindow, Path=DataContext.CurrentIcon}" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Сменить тему"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

        </StackPanel>
    </Grid>
</Window>
